
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title JOOM
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 JOOM
        main
            div#welcome
                form
                    input(placeholder="ROOM NAME", reqired, type="text")
                    button Enter Room  
                h4 Open Rooms: 
                ul
            div#room
                form#name
                    h2
                    input(placeholder="Nickname", reqired, type="text")
                    button Save
                form#msg
                    h2
                    ul
                    input(placeholder="Message", reqired, type="text")
                    button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js") 